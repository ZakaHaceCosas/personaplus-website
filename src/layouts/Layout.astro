---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#32FF80" />
        <meta name="description" content="Give yourself a plus!" />
        <link rel="apple-touch-icon" href="/logo256.webp" />

        <!-- Open Graph (OG) Meta Tags -->
        <meta property="og:title" content="PersonaPlus" />
        <meta property="og:site_name" content="PersonaPlus" />
        <meta property="og:description" content="Give yourself a plus!" />
        <meta
            property="og:image"
            content="https://raw.githubusercontent.com/ZakaHaceCosas/personaplus/main/assets/PP_BANNER.png"
        />
        <meta property="og:url" content="https://personaplus.vercel.app" />
        <meta property="og:type" content="website" />

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="PersonaPlus" />
        <meta name="twitter:description" content="Give yourself a plus!" />
        <meta
            name="twitter:image"
            content="https://raw.githubusercontent.com/ZakaHaceCosas/personaplus/main/assets/PP_BANNER.png"
        />
        <meta name="twitter:url" content="https://personaplus.vercel.app" />
        <meta name="twitter:site" content="@ZakaHaceCosas" />

        <!-- Additional Meta Tags -->
        <meta name="application-name" content="PersonaPlus" />
        <meta name="author" content="ZakaHaceCosas" />
        <meta name="robots" content="index, follow" />
        <meta
            name="keywords"
            content="salud, bienestar, aplicación móvil, PersonaPlus, fitness, mental health"
        />
        <meta name="revisit-after" content="60 days" />
        <meta name="copyright" content="2024 PersonaPlus" />
        <meta name="rating" content="General" />
        <meta name="distribution" content="global" />
        <meta name="language" content="EN" />
        <meta http-equiv="Content-Language" content="en" />

        <!--
        manifest.json provides metadata used when your web app is installed on a
        user's mobile device or desktop. See https://developers.google.com/web/fundamentals/web-app-manifest/
        -->
        <link rel="manifest" href="/manifest.json" />
        <title>{title}</title>

        <!-- Fonts -->
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com"
            crossorigin="anonymous"
        />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap"
        />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&display=swap"
        />

        <!-- CSS -->
        <link rel="stylesheet" href="/personaplus.css" />
    </head>
    <body>
        <slot />
    </body>
</html>
