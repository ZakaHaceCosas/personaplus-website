---
import "../components/personaplus.css";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#32FF80" />
        <meta name="description" content={description} />
        <link rel="apple-touch-icon" href="/logo256.webp" />

        <!-- Open Graph (OG) Meta Tags -->
        <meta property="og:title" content={title} />
        <meta property="og:site_name" content="PersonaPlus" />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content="https://raw.githubusercontent.com/GiveItAPlus/personaplus/refs/heads/master/assets/design/PP_BANNER.webp"
        />
        <meta property="og:url" content="https://personaplus.vercel.app" />
        <meta property="og:type" content="website" />

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta
            name="twitter:image"
            content="https://raw.githubusercontent.com/GiveItAPlus/personaplus/refs/heads/master/assets/design/PP_BANNER.webp"
        />
        <meta name="twitter:url" content="https://personaplus.vercel.app" />

        <!-- Additional Meta Tags -->
        <meta name="application-name" content="PersonaPlus" />
        <meta name="author" content="ZakaHaceCosas" />
        <meta name="robots" content="index, follow" />
        <meta
            name="keywords"
            content="health, wellbeing, mobile app, PersonaPlus, fitness"
        />
        <meta name="revisit-after" content="90 days" />
        <meta
            name="copyright"
            content="2024 ZakaHaceCosas and the GitHub contributors"
        />
        <meta name="rating" content="General" />
        <meta name="distribution" content="global" />
        <meta name="language" content="EN" />
        <meta http-equiv="Content-Language" content="en" />

        <link rel="manifest" href="/manifest.json" />
        <title>{title}</title>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <slot />
    </body>
</html>

<SpeedInsights />
